<% /* views/account/management.ejs */ %>
<section class="account">
  <h1>Account Management</h1>

  <% if (typeof messages === "function") { %>
    <div class="flash"><%- messages() %></div>
  <% } %>

  <% if (errors && errors.length) { %>
    <ul class="notice" role="alert">
      <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
    </ul>
  <% } %>

  <% if (accountData) { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>

    <h2 class="sr-only">Account Shortcuts</h2>
    <div class="button-row">
      <a class="btn" href="/account/update/<%= accountData.account_id %>">Update Account Info</a>
      <a class="btn" href="/appointment/mine">My Appointments</a>
      <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
        <a class="btn" href="/appointment/manage">Manage Appointments</a>
        <a class="btn" href="/inv">Inventory Management</a>
      <% } %>
    </div>
  <% } else { %>
    <p>You're not logged in. <a href="/account/login">Log in</a></p>
  <% } %>
</section>
