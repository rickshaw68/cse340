<section class="panel management-page">
  <h1>Inventory Management</h1>

    <% if (accountData) { %>
      <p class="greeting">Welcome, <%= accountData.account_firstname %></p>
      <% if (accountData.account_type !== 'Client') { %>
        <h2>Administration</h2>
      <% } %>
    <% } %>

  <% if (messages && messages.length) { %>
    <div class="notice" role="status"><%= messages[0] %></div>
  <% } %>

  <% if (errors) { %>
    <ul class="notice" role="alert">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <ul class="management-actions">
    <li><a href="/inv/add-classification" class="btn">Add New Classification</a></li>
    <li><a href="/inv/add-inventory" class="btn">Add New Inventory</a></li>
    <li><a class="btn" href="/appointment/mine">My Appointments</a></li>
    <li><a class="btn" href="/appointment/manage">Manage Appointments</a></li>
  </ul>

  <h2 class="section-title">Manage Inventory</h2>
  <p class="section-desc">Select a classification to see its inventory items.</p>

  <div class="form-field filter-inline">
    <label for="classificationList">Classification</label>
    <div class="select-wrap">
      <%- classificationSelect %>
    </div>
  </div>


  <table id="inventoryDisplay"></table>

  <noscript>JavaScript must be enabled to use this page.</noscript>

</section>

<script src="../../js/inventory.js"></script>

